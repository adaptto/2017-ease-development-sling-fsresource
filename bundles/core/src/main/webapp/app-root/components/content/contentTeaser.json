{
  "jcr:primaryType": "cq:Component",
  "jcr:title": "Content Teaser",
  "componentGroup": "pv-training-editbdlg",
  "cq:icon": "imageText",

  "cq:editConfig": {
    "jcr:primaryType": "cq:EditConfig",
    
    "cq:inplaceEditing": {
      "jcr:primaryType": "cq:InplaceEditingConfig",
      "active": true,
      "editorType": "text",
      "config": {
        "textPropertyName": "text",
        "editElementQuery": "div.richtext",
        
        "rtePlugins": {
          // allow only bold formatting
          "format": {
            "features": ["bold"]
          },
          // allow only link/unlink
          "links": {
            "features": ["modifylink","unlink"]
          },
          // disable some features
          "justify": {
            "features": "-"
          },
          "lists": {
            "features": "-"
          }
        }
        
      }
    }
    
  },
  
  "cq:htmlTag": {
    "class": "single-features"
  },

  "cq:dialog": {
    "jcr:primaryType": "nt:unstructured",
    "sling:resourceType": "cq/gui/components/authoring/dialog",
    "jcr:title": "Tabbed Dialog",
    "content": {
      "sling:resourceType": "granite/ui/components/coral/foundation/container",
      "items": {
        "tabs": {
          "sling:resourceType": "granite/ui/components/coral/foundation/tabs",
          "items": {
            
            "teaser": {
              "sling:resourceType": "granite/ui/components/coral/foundation/fixedcolumns",
              "jcr:title": "Teaser",
              "margin": true,
              "items": {
                "content": {
                  "sling:resourceType": "granite/ui/components/coral/foundation/container",
                  "items": {
                    "title": {
                      "sling:resourceType": "granite/ui/components/coral/foundation/form/textfield",
                      "name": "./title",
                      "fieldLabel": "Title",
                      "required": true,
                      "maxlength": 30
                    },
                    "select": {
                      "sling:resourceType": "granite/ui/components/coral/foundation/form/select",
                      "name": "./imagePos",
                      "fieldLabel": "Image Pos.",
                      "items": {
                        "left": {
                          "value": "left",
                          "text": "Left"
                        },
                        "option2": {
                          "value": "right",
                          "text": "Right"
                        }
                      }
                    }
                  }
                }
              }
            },
    
            "contact": {
              "sling:resourceType": "granite/ui/components/coral/foundation/fixedcolumns",
              "jcr:title": "Contact",
              "margin": true,
              "items": {
                "content": {
                  "sling:resourceType": "granite/ui/components/coral/foundation/container",
                  "items": {
                    "name": {
                      "sling:resourceType": "granite/ui/components/coral/foundation/form/textfield",
                      "name": "./contactName",
                      "fieldLabel": "Name"
                    },
                    "email": {
                      "sling:resourceType": "granite/ui/components/coral/foundation/form/textfield",
                      "name": "./contactEMail",
                      "fieldLabel": "E-Mail",
                      "validation": ["wcmio.email"]
                    },
                    "phone": {
                      "sling:resourceType": "granite/ui/components/coral/foundation/form/textfield",
                      "name": "./contactPhone",
                      "fieldLabel": "Phone",
                      "validation": ["wcmio.pattern"],
                      "granite:data": {
                        "wcmio-pattern": "^[0-9+ ]+$",
                        "wcmio-patternmessage": "Must be a valid phone number."
                      }
                    }                   
                  }
                }
              }
            }
    
          }
        }
      }
    }
  }

}
